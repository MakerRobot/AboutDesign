<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cornerRadius_cards"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="?attr/selectableItemBackgroundBorderless">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/gradient_mail">

            <ImageView
                android:layout_width="@dimen/imageview_card_size"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_imageview_card"
                android:layout_marginStart="8dp"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/secondaryTextColor"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Feedback by E-mail"
                android:layout_marginStart="@dimen/margin_cards"
                android:layout_marginEnd="@dimen/margin_cards"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>