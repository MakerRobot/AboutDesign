<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_banner">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageIconApp"
        android:layout_width="@dimen/circle_imageview_size"
        android:layout_height="@dimen/circle_imageview_size"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_circleimageview"
        app:civ_border_width="@dimen/boder_size_circleimageview"
        app:civ_border_color="@color/imageIconColor"/>


    <LinearLayout
        android:layout_below="@id/imageIconApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_banner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tectViewAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginBottom="@dimen/margin_banner"
            android:textColor="@color/primaryTextColor"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/app_version"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_marginBottom="@dimen/margin_bottom_banner"
            android:textColor="@color/secondaryTextColor"/>

    </LinearLayout>


</RelativeLayout>